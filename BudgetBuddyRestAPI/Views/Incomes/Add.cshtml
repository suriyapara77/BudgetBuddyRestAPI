@{
}
@model BudgetBuddyRestAPI.Models.AddIncomeViewModel


<div class="container mt-4">
    <h2>Add New Income</h2>
    <form method="post">
        <div class="form-group mb-3">
            <label asp-for="Category" class="form-label">Income Category</label>
            <select asp-for="Category" class="form-select">
                <option value="">Select a category...</option>
                <option value="Sponsor">Sponsor</option>
                <option value="Merchandise Sale">Merchandise Sale</option>
                <!-- Add more categories as needed -->
            </select>
            
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Name/Description</label>
            <input asp-for="Name" class="form-control" placeholder="e.g., Ubisoft Sponsorship" />
            
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Amount ($)</label>
            <input asp-for="Amount" type="number" class="form-control" placeholder="Enter amount" />
            
        </div>

        <button type="submit" class="btn btn-primary">Save Income</button>
        <a asp-controller="Incomes" asp-action="List" class="btn btn-secondary">Return to List</a>

    </form>
</div>

