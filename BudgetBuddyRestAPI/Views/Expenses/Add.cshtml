@model BudgetBuddyRestAPI.Models.AddExpenseViewModel


<div class="container mt-4">
    <h2>Add New Expense</h2>
    <form method="post">
        <div class="form-group mb-3">
            <label class="form-label">Expense Category</label>
            <select asp-for="Category" class="form-select">
                <option value="">Select a category...</option>
                <option value="Social Events">Social Events</option>
                <option value="Competitions">Competitions</option>
                <option value="Operating Expenses">Operating Expenses</option>
                <option value="Merchandise">Merchandise</option>
                <!-- Add more categories as needed -->
            </select>

        </div>

        <div class="form-group mb-3">
            <label class="form-label">Name/Description</label>
            <input asp-for="Name" class="form-control" placeholder="e.g., Ubisoft Sponsorship" />

        </div>

        <div class="form-group mb-3">
            <label class="form-label">Amount ($)</label>
            <input asp-for="Amount" type="number" class="form-control" placeholder="Enter amount" />

        </div>

        <button type="submit" class="btn btn-primary">Save Expense</button>
        <a asp-controller="Expenses" asp-action="List" class="btn btn-secondary">Return to List</a>
    </form>
</div>

