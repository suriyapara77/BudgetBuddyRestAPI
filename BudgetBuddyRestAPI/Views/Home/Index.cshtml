@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center my-5">
    <h1 class="display-4 fw-bold mb-4">Welcome to BudgetBuddy</h1>
    <p class="lead mb-5">Easily track your club's budget, expenses, and income all in one place.</p>

    <div class="mb-4">
        <h2 class="display-6">Your Current Club's Budget:</h2>
        <p class="fs-4">$0.00</p>
    </div>

    <div class="mb-4">
        <h2 class="display-6">Dashboards:</h2>
    </div>

    <div class="d-flex justify-content-center gap-3">
        <a asp-controller="Expenses" asp-action="List" class="btn btn-primary btn-lg">Expenses</a>
        <a asp-controller="Incomes" asp-action="List" class="btn btn-secondary btn-lg">Income</a>
    </div>
</div>